{
  "manifest_version": 3,
  "name": "Cross-Browser Extension",
  "version": "1.0",
  "description": "A simple cross-browser extension with background and content scripts",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}